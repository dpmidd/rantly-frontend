{{yield}}

{{#if session.isAuthenticated}}
  <a {{ action 'invalidateSession' }}>Logout</a>
{{else}}
  <form class='login-form' {{action 'authenticate' on='submit'}}>
    <div class='form-group'>
      {{input value=identification placeholder='Your email'}}
    </div>
    <div class="form-group">
      {{input value=password placeholder='Your password' type='password'}}
    </div>
    <div class="form-group">
      <button type="submit">Login</button>
    </div>
  </form>
{{/if}}
